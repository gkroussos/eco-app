<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

	<!--  Including Header containing banner / logo / buttons -->
    <include 	android:layout_width="wrap_content"
  				android:layout_height="wrap_content" 
  				layout="@layout/header_include" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:clickable="true"
        android:orientation="vertical" >
    		 
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical" >
        
               		    <ImageView
               		        android:id="@+id/site_icon"
               		        android:layout_width="wrap_content"
               		        android:layout_height="wrap_content"
               		        android:layout_gravity="center_horizontal"
               		        android:layout_marginTop="12dp"
               		        android:contentDescription="@string/site_icon_text"
               		        android:src="@drawable/site_icon_transparent" />
               		    
		    <TextView
		        android:id="@+id/site_name"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:ems="10"
		        android:gravity="center"
		        android:textColor="@color/black"
		        android:textStyle="bold"
		        		        android:layout_marginLeft="4dp"
		        android:layout_marginRight="4dp"
		        android:textSize="19sp" />

		    <TextView
		        android:id="@+id/site_description"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="4dp"
		        android:layout_marginRight="4dp"
		        android:layout_marginTop="15dp"
		        android:ems="10"
		        android:gravity="center"
		        android:inputType="textMultiLine"
		        android:textColor="@color/black" />
		
		    <TextView
		        android:id="@+id/site_type"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:ems="10"
   		        android:layout_marginLeft="4dp"
		        android:layout_marginRight="4dp"
		        android:gravity="center"
		        android:textColor="@color/black" />
		
		    <TextView
		        android:id="@+id/site_telephone"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:ems="10"
		        android:gravity="center"
		        android:textColor="@color/black" />
		
		    <TextView
		        android:id="@+id/site_url"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:ems="10"
		        android:gravity="center"
		        android:textColor="@color/black" 
		        android:clickable="true" 
		        android:textStyle="italic"
   		        android:layout_marginLeft="4dp"
		        android:layout_marginRight="4dp"
		        android:onClick="onFollowLink" />
	    </LinearLayout>
    </ScrollView>

</LinearLayout>